@page "/"
@using Demo.Data.DataModels

<PageTitle>Demo: Generic CRUD Repository</PageTitle>
<h1>Demo: Generic CRUD Repository</h1>
<p class="alert-danger">UI BUG: child component not rendering parent changes, please refresh page after saving a change.</p>
<EditForm Model="Form" OnValidSubmit="ValidSubmit">

    <div class="row">
        <div class="col-4">
            <ESelect class="form-control" SelectOptions="@selectOptions" @bind-Value="Form.SelectedDemoModelName" @ref="eSelect" 
                ValidationFor="() => Form.SelectedDemoModelName"  FloatingLabel="false" Label="Choose Demo Model to edit:" 
                OnChangeAction="@UpdateMessage" autofill="false"/>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="from-control-wrapper mt-2">
                <label class="form-control-label" for="editor">Demo Model to edit:</label>
                <InputText id="editor" class="form-control" @bind-Value="Form.SelectedDemoModelName" 
                    disabled="@editorDisabled" autocomplete="off" />
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-4">
            <p>@message</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-4">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>


  
</EditForm>



