<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <div class="mb-1">
                        <input id="search" class="form-control" placeholder="Search availabe..." autocomplete="off" @bind-value="searchNotSelectedText" @oninput="SearchNotSelected" />
                    </div>
                    <select id="NotSelected" class="form-control border" multiple="multiple" size="@BoxHeight">
                        @foreach (var option in notSelectedDisplay)
                        {
                            <option id="@option.Id" @onclick="@(() => Select(option))">@option.Value</option>
                        }
                    </select>
                    <div class="p-1">
                        <button type="button" class="btn btn-outline-secondary px-2 py-0 w-100 d-flex float-right" @onclick="SelectAll">Select all >></button>
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-1">
                        <input id="search" class="form-control" placeholder="Search selected..." autocomplete="off" @bind-value="searchSelectedText" @oninput="SearchSelected" />
                    </div>
                    <select id="Selected" class="form-control border" multiple="multiple" size="@BoxHeight">
                        @foreach (var option in selectedDisplay)
                        {
                            <option id="@option.Id" @onclick="@(() => Deselect(option))">@option.Value</option>
                        }
                    </select>
                    <div class="p-1 align-content-end">
                        <button type="button" class="btn btn-outline-secondary px-2 py-0 w-100" @onclick="DeselectAll">@removeAllText Remove all</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





